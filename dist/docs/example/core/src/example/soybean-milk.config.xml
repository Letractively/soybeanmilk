<?xml version="1.0" encoding="UTF-8"?>
<soybean-milk>

	<!-- 定义解决对象 -->
	<resolvers>
		<resolver id="helloResolver" class="example.resolver.HelloResolver" />
	</resolvers>
	
	<executables>
		
		<action name="helloActionXml">
			<invoke name="hello" resolver="helloResolver" result-key="helloResult">
				<arg key="helloTo" />
				<arg key="helloRepeat" />
			</invoke>
			
			<invoke name="printObject" resolver-class="example.resolver.HelloResolver">
				<arg key="helloResult" />
			</invoke>
		</action>
		
		<action name="helloActionStatement">
			<invoke> helloResult = helloResolver.hello(helloTo, 3) </invoke>
			<invoke> helloResolver.printObject(helloResult); </invoke>
		</action>
		
	</executables>
	
</soybean-milk>